<h1>Listing documents</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Creator</th>
    <th>Revisor</th>
    <th>Expire on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.body %></td>
    <td><%= document.creator_id %></td>
    <td><%= document.revisor_id %></td>
    <td><%= document.expire_on %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

